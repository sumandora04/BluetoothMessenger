<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:app = "http://schemas.android.com/apk/res-auto"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	tools:context = ".MainActivity" >><Button
	android:id = "@+id/bluetooth_on_btn"
	android:layout_width = "wrap_content"
	android:layout_height = "wrap_content"
	android:layout_marginStart = "8dp"
	android:layout_marginTop = "24dp"
	android:text = "On"
	app:layout_constraintStart_toStartOf = "parent"
	app:layout_constraintTop_toTopOf = "parent" /><Button
	android:id = "@+id/bluetooth_off_btn"
	android:layout_width = "wrap_content"
	android:layout_height = "wrap_content"
	android:layout_marginStart = "8dp"
	android:layout_marginEnd = "8dp"
	android:text = "Listen"
	app:layout_constraintBaseline_toBaselineOf = "@+id/bluetooth_on_btn"
	app:layout_constraintEnd_toStartOf = "@+id/search_devices_btn"
	app:layout_constraintHorizontal_bias = "0.238"
	app:layout_constraintStart_toEndOf = "@+id/bluetooth_on_btn" /><ListView
	android:id = "@+id/device_list"
	android:layout_width = "0dp"
	android:layout_height = "wrap_content"
	android:layout_marginStart = "8dp"
	android:layout_marginTop = "8dp"
	android:layout_marginEnd = "8dp"
	app:layout_constraintEnd_toEndOf = "parent"
	app:layout_constraintStart_toStartOf = "parent"
	app:layout_constraintTop_toBottomOf = "@+id/bluetooth_on_btn" /><Button
	android:id = "@+id/search_devices_btn"
	android:layout_width = "wrap_content"
	android:layout_height = "wrap_content"
	android:layout_marginEnd = "48dp"
	android:text = "Find"
	app:layout_constraintBaseline_toBaselineOf = "@+id/bluetooth_off_btn"
	app:layout_constraintEnd_toStartOf = "@+id/status_text_view" /><TextView
	android:id = "@+id/status_text_view"
	android:layout_width = "wrap_content"
	android:layout_height = "wrap_content"
	android:layout_marginEnd = "8dp"
	android:text = "Status"
	app:layout_constraintBaseline_toBaselineOf = "@+id/search_devices_btn"
	app:layout_constraintEnd_toEndOf = "parent" /><TextView
	android:id = "@+id/msg_box"
	android:layout_width = "0dp"
	android:layout_height = "wrap_content"
	android:layout_marginEnd = "8dp"
	android:layout_marginBottom = "24dp"
	android:text = "Msg here"
	android:textAppearance = "@style/TextAppearance.AppCompat.Medium"
	app:layout_constraintBottom_toTopOf = "@+id/send_button"
	app:layout_constraintEnd_toEndOf = "@+id/device_list"
	app:layout_constraintHorizontal_bias = "0.0"
	app:layout_constraintStart_toStartOf = "@+id/device_list"
	app:layout_constraintTop_toBottomOf = "@+id/device_list"
	app:layout_constraintVertical_bias = "0.736" /><EditText
	android:id = "@+id/msg_edit_text"
	android:layout_width = "wrap_content"
	android:layout_height = "wrap_content"
	android:layout_marginStart = "8dp"
	android:layout_marginTop = "32dp"
	android:layout_marginBottom = "8dp"
	android:ems = "10"
	android:inputType = "textPersonName"
	android:text = "Name"
	app:layout_constraintBottom_toBottomOf = "parent"
	app:layout_constraintStart_toStartOf = "@+id/msg_box"
	app:layout_constraintTop_toBottomOf = "@+id/msg_box"
	app:layout_constraintVertical_bias = "0.9" /><Button
	android:id = "@+id/send_button"
	android:layout_width = "wrap_content"
	android:layout_height = "wrap_content"
	android:layout_marginStart = "8dp"
	android:layout_marginEnd = "8dp"
	android:text = "Send"
	app:layout_constraintBaseline_toBaselineOf = "@+id/msg_edit_text"
	app:layout_constraintEnd_toEndOf = "@+id/msg_box"
	app:layout_constraintStart_toEndOf = "@+id/msg_edit_text" /></androidx.constraintlayout.widget.ConstraintLayout >